<%= form_with scope: :list, url: :lists_new , local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :visibility %>
    <%= f.radio_button :public, true %>
    <%= f.label :public, "Public", :value => "true"  %>
    <%= f.radio_button :public, false, :checked => true %>
    <%= f.label :public, "Private", :value => "false" %>
  </div>

  <button id="addNewTask">Add Task</button>
  <div class="cards-container">

  </div>
  
  <div class="actions">
    <%= link_to "Back", :back, class: 'btn btn-secondary'  %>
    <%= f.submit "Save", class: 'btn btn-success'  %>
  </div>
<% end %>

<%= javascript_pack_tag 'lists_new' %>
